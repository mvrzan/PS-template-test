{
  "description": "A New Flow",
  "states": [
    {
      "name": "Trigger",
      "type": "trigger",
      "transitions": [
        {
          "event": "incomingMessage"
        },
        {
          "event": "incomingCall"
        },
        {
          "next": "send_and_reply_1",
          "event": "incomingConversationMessage"
        },
        {
          "event": "incomingRequest"
        },
        {
          "event": "incomingParent"
        }
      ],
      "properties": {
        "offset": {
          "x": 20,
          "y": 20
        }
      }
    },
    {
      "name": "send_message_1",
      "type": "send-message",
      "transitions": [
        {
          "next": "function_1",
          "event": "sent"
        },
        {
          "event": "failed"
        }
      ],
      "properties": {
        "offset": {
          "x": -150,
          "y": 530
        },
        "service": "{{trigger.message.InstanceSid}}",
        "channel": "{{trigger.message.ChannelSid}}",
        "from": "{{flow.channel.address}}",
        "message_type": "custom",
        "to": "{{contact.channel.address}}",
        "body": "We appreciate your feedback. Have a wonderful day!"
      }
    },
    {
      "name": "send_and_reply_1",
      "type": "send-and-wait-for-reply",
      "transitions": [
        {
          "next": "send_message_1",
          "event": "incomingMessage"
        },
        {
          "next": "Copy_of_function_1",
          "event": "timeout"
        },
        {
          "event": "deliveryFailure"
        }
      ],
      "properties": {
        "offset": {
          "x": 270,
          "y": 260
        },
        "service": "{{trigger.message.InstanceSid}}",
        "channel": "{{trigger.message.ChannelSid}}",
        "from": "{{flow.channel.address}}",
        "message_type": "custom",
        "body": "Please press 1 if you are happy with the service provided or press 9 if you are dissatisfied.",
        "timeout": "360"
      }
    },
    {
      "name": "function_1",
      "type": "run-function",
      "transitions": [
        {
          "event": "success"
        },
        {
          "event": "fail"
        }
      ],
      "properties": {
        "service_sid": "${SERVERLESS_SID}",
        "environment_sid": "${SERVERLESS_ENV_SID}",
        "offset": {
          "x": -150,
          "y": 800
        },
        "function_sid": "${SURVEY_TASK_AND_CONVERSATION_FUNCTION_SID}",
        "parameters": [
          {
            "value": "{{trigger.conversation.ChannelAttributes.taskSid}}",
            "key": "taskSid"
          },
          {
            "value": "{{widgets.send_and_reply_1.inbound.Body}}",
            "key": "customerRating"
          },
          {
            "value": "{{trigger.conversation.ConversationSid}}",
            "key": "conversationSid"
          }
        ],
        "url": "https://${SERVERLESS_DOMAIN}/features/sms-surveys/sms-survey-task-update"
      }
    },
    {
      "name": "Copy_of_function_1",
      "type": "run-function",
      "transitions": [
        {
          "event": "success"
        },
        {
          "event": "fail"
        }
      ],
      "properties": {
        "service_sid": "${SERVERLESS_SID}",
        "environment_sid": "${SERVERLESS_ENV_SID}",
        "offset": {
          "x": 260,
          "y": 800
        },
        "function_sid": "${SURVEY_TASK_AND_CONVERSATION_FUNCTION_SID}",
        "parameters": [
          {
            "value": "{{trigger.conversation.ChannelAttributes.taskSid}}",
            "key": "taskSid"
          },
          {
            "value": "0",
            "key": "customerRating"
          },
          {
            "value": "{{trigger.conversation.ConversationSid}}",
            "key": "conversationSid"
          }
        ],
        "url": "https://${SERVERLESS_DOMAIN}/features/sms-surveys/sms-survey-task-update"
      }
    }
  ],
  "initial_state": "Trigger",
  "flags": {
    "allow_concurrent_calls": true
  }
}
